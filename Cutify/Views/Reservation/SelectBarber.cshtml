@model IEnumerable<Cutify.Models.User>

@{
    ViewData["Title"] = "Bərbərini seç";
}

<div class="reservation-container">
    <div class="back-button">
        <a href="@Url.Action("Index", "home")">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M15 19L8 12L15 5" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
        </a>
    </div>

    <div class="reservation-header">
        <h1>Bərbərini seç</h1>
        <p>Sənin üçün uyğun olan bərbəri seç və rahatlıqla növbəti addıma keç.</p>
    </div>

    <div class="progress-bar">
        <div class="progress-filled"></div>
    </div>

    <div class="barbers-grid">
        @foreach (var barber in Model)
        {
            <a href="@Url.Action("PersonalInfo", "Reservation", new { barberId = barber.Id })" class="barber-card">
                <div class="barber-avatar">
                    @if (!string.IsNullOrEmpty(barber.ImageUrl))
                    {
                        <img src="@barber.ImageUrl" alt="@barber.FullName" />
                    }
                    else
                    {
                        <img src="/images/default-avatar.jpg" alt="@barber.FullName" />
                    }
                </div>
                <h3 class="barber-name">@barber.FullName</h3>
            </a>
        }
    </div>

    <div class="bottom-actions">
        <a href="@Url.Action("PersonalInfo", "Reservation")" class="continue-button">Davam et</a>
    </div>
</div>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    }

    body {
        background-color: #f5f5f5;
    }

    .reservation-container {
        max-width: 768px;
        margin: 0 auto;
        padding: 20px;
        min-height: 100vh;
        position: relative;
        display: flex;
        flex-direction: column;
    }

    .back-button {
        margin-bottom: 20px;
    }

    .back-button a {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 48px;
        height: 48px;
        background: white;
        border-radius: 12px;
        text-decoration: none;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
    }

    .reservation-header {
        margin-bottom: 30px;
    }

    .reservation-header h1 {
        font-size: 32px;
        font-weight: bold;
        margin-bottom: 12px;
        color: #212121;
    }

    .reservation-header p {
        font-size: 16px;
        color: #757575;
        line-height: 1.5;
    }

    .progress-bar {
        height: 4px;
        background-color: #E0E0E0;
        border-radius: 2px;
        margin-bottom: 40px;
        position: relative;
    }

    .progress-filled {
        position: absolute;
        left: 0;
        top: 0;
        height: 100%;
        width: 33%;
        background-color: #212121;
        border-radius: 2px;
    }

    .barbers-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 16px;
        margin-bottom: 40px;
    }

    .barber-card {
        background-color: white;
        border-radius: 12px;
        padding: 24px;
        text-align: center;
        text-decoration: none;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .barber-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .barber-avatar {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        overflow: hidden;
        margin: 0 auto 16px;
    }

    .barber-avatar img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .barber-name {
        font-size: 16px;
        font-weight: 600;
        color: #212121;
    }

    .bottom-actions {
        margin-top: auto;
        padding-top: 20px;
    }

    .continue-button {
        display: block;
        width: 100%;
        padding: 16px;
        background-color: #9E9E9E;
        color: white;
        text-align: center;
        text-decoration: none;
        font-weight: 600;
        border-radius: 6px;
        font-size: 16px;
    }

    
    @@media (max-width: 600px) {
        .reservation-header h1 {
            font-size: 28px;
        }

        .barbers-grid {
            grid-template-columns: 1fr 1fr;
            gap: 12px;
        }

        .barber-avatar {
            width: 80px;
            height: 80px;
        }

        .barber-name {
            font-size: 14px;
        }
    }
</style>