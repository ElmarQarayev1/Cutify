@model Cutify.Models.Reservation

@{
    ViewData["Title"] = "Reservasiya təsdiqləndi";
}

<div class="reservation-container">
    <div class="confirmation-card">
        <div class="confirmation-icon">
            <svg width="64" height="64" viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg">
                <circle cx="32" cy="32" r="32" fill="#4CAF50" fill-opacity="0.1" />
                <path d="M44 24L28 40L20 32" stroke="#4CAF50" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
        </div>

        <h1 class="confirmation-title">Rezervasiyanız təsdiqləndi!</h1>

        <div class="reservation-details">
            <div class="detail-item">
                <span class="detail-label">Bərbər:</span>
                <span class="detail-value">@Model.Barber.FullName</span>
            </div>

            <div class="detail-item">
                <span class="detail-label">Tarix:</span>
                <span class="detail-value">@Model.ReservationDate.ToString("dd.MM.yyyy")</span>
            </div>

            <div class="detail-item">
                <span class="detail-label">Saat:</span>
                <span class="detail-value">@Model.ReservationDate.ToString("HH:mm")</span>
            </div>

            <div class="detail-item">
                <span class="detail-label">Ad və soyad:</span>
                <span class="detail-value">@Model.CustomerFullName</span>
            </div>

            <div class="detail-item">
                <span class="detail-label">Telefon nömrəsi:</span>
                <span class="detail-value">@Model.CustomerPhone</span>
            </div>
        </div>

        <div class="bottom-actions">
            <a href="@Url.Action("Index", "Home")" class="home-button">Ana səhifəyə qayıt</a>
        </div>
    </div>
</div>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    }

    body {
        background-color: #f5f5f5;
    }

    .reservation-container {
        max-width: 768px;
        margin: 0 auto;
        padding: 20px;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .confirmation-card {
        background-color: white;
        border-radius: 16px;
        padding: 40px;
        width: 100%;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .confirmation-icon {
        margin-bottom: 24px;
    }

    .confirmation-title {
        font-size: 24px;
        font-weight: bold;
        color: #212121;
        margin-bottom: 32px;
    }

    .reservation-details {
        background-color: #f9f9f9;
        border-radius: 12px;
        padding: 24px;
        margin-bottom: 32px;
        text-align: left;
    }

    .detail-item {
        display: flex;
        justify-content: space-between;
        padding: 12px 0;
        border-bottom: 1px solid #eeeeee;
    }

    .detail-item:last-child {
        border-bottom: none;
    }

    .detail-label {
        font-size: 14px;
        font-weight: 500;
        color: #757575;
    }

    .detail-value {
        font-size: 14px;
        font-weight: 600;
        color: #212121;
    }

    .bottom-actions {
        margin-top: 16px;
    }

    .home-button {
        display: block;
        width: 100%;
        padding: 16px;
        background-color: #212121;
        color: white;
        text-align: center;
        text-decoration: none;
        font-weight: 600;
        border-radius: 6px;
        font-size: 16px;
    }

    .home-button:hover {
        background-color: #000;
    }

    /* Media queries for responsive design */
    @@media (max-width: 600px) {
        .confirmation-card {
            padding: 24px;
        }

        .confirmation-title {
            font-size: 20px;
        }

        .reservation-details {
            padding: 16px;
        }
    }
</style>