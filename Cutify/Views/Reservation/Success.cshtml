@{
    ViewData["Title"] = "Rezervasiya Təsdiqləndi";
}

<div class="success-container">
    <div class="back-button">
        <a asp-action="index" asp-controller="home"><span>&lt;</span></a>
    </div>
    <div class="logo">
        <h1>CUTIFY</h1>
    </div>

    <div class="success-icon">
        <svg viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
            <path d="M50,10 L59.1,29.4 L80,32.2 L65,47 L68.2,67.8 L50,58 L31.8,67.8 L35,47 L20,32.2 L40.9,29.4 Z" fill="#000" />
            <path d="M40,50 L47,57 L65,39" stroke="#fff" stroke-width="6" fill="none" stroke-linecap="round" stroke-linejoin="round" />
        </svg>
    </div>

    <h2 class="success-title">Rezervasiyan uğurla tamamlandı!</h2>

    <p class="success-message">
        Rezervasiyan tamamlandı. Seçdiyin vaxtda bərbərin hazır olacaq və səni gözləyəcək.
    </p>
</div>

<style>
    .back-button a {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        background-color: #fff;
        border-radius: 5px;
        text-decoration: none;
        box-shadow: 0px 1px 3px rgba(0, 0, 0, 0.1);
        font-size: 24px;
        color: #000;
        margin-bottom: 20px;
    }
.success-page {
    background-color: #f8f8f8;
    height: 100%;
    width: 100%;
    overflow: hidden;
}

.success-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    padding: 40px 20px;
    height: 100vh;
    text-align: center;
    max-width: 500px;
    margin: 0 auto;
}

.logo {
    margin-bottom: 60px;
}

.logo h1 {
    font-size: 24px;
    font-weight: 800;
    letter-spacing: 5px;
}

.success-icon {
    width: 120px;
    height: 120px;
    margin: 40px 0;
}

.success-icon svg {
    width: 100%;
    height: 100%;
}

.success-title {
    font-size: 28px;
    font-weight: bold;
    margin-bottom: 20px;
}

.success-message {
    color: #666;
    font-size: 16px;
    line-height: 1.6;
    max-width: 380px;
}

@@media (max-width: 768px) {
    .success-container {
        padding-top: 60px;
    }

    .success-title {
        font-size: 24px;
    }

    .success-message {
        font-size: 15px;
    }
}

</style>