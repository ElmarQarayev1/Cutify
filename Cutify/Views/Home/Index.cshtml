@{
    ViewData["Title"] = "Cutify";
}
<div class="cutify-container">
    <div class="cutify-header">
        <h1 class="logo">CUTIFY</h1>
    </div>
    <div class="booking-fullscreen">
        <div class="booking-image">
            <img src="~/img/barber.jpeg" alt="Barber cutting hair" class="responsive-img">

            <div class="booking-text">
                <h2 class="booking-title">Asan və sürətli bərbər rezervasiyası</h2>
                <p class="booking-subtitle">Sevdiyin bərbəri seç, sənə uyğun saatı cəmi bir neçə addımda rezerv et.</p>

                <div class="booking-actions">
                    <a asp-action="selectbarber" asp-controller="reservation" class="booking-button">Rezerv et</a>
                    <a  asp-action="login" asp-controller="account"  class="barber-link">Bərbər kimi daxil ol</a>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        width: 100%;
        overflow-x: hidden;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        background-color: #000;
    }
    .cutify-container {
        width: 100%;
        height: 100vh;
        display: flex;
        flex-direction: column;
    }

    .cutify-header {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        padding: 15px 20px;
        z-index: 10;
    }

    .logo {
        font-size: 24px;
        font-weight: bold;
        letter-spacing: 3px;
        margin: 0;
        color: white;
    }

    .booking-fullscreen {
        width: 100%;
        height: 100vh;
        overflow: hidden;
    }

    .booking-image {
        position: relative;
        width: 100%;
        height: 100%;
        background-color: #000;
    }

    .responsive-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0.85;
    }

    .booking-text {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        padding: 40px 30px;
        color: white;
        background: linear-gradient(transparent, rgba(0, 0, 0, 0.9));
    }

    .booking-title {
        font-size: 36px;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .booking-subtitle {
        font-size: 18px;
        margin-bottom: 30px;
        line-height: 1.5;
    }

    .booking-actions {
        display: flex;
        flex-direction: column;
        gap: 15px;
        margin-top: 20px;
    }

    .booking-button {
        display: block;
        padding: 16px;
        background-color: white;
        color: black;
        text-align: center;
        text-decoration: none;
        font-weight: bold;
        border-radius: 6px;
        width: 100%;
        font-size: 16px;
    }

    .barber-link {
        display: block;
        text-align: center;
        color: white;
        text-decoration: underline;
        padding: 10px;
        font-size: 16px;
    } 
    @@media (max-width: 768px) {
        .booking-title {
            font-size: 28px;
        }

        .booking-subtitle {
            font-size: 16px;
        }
    }

    @@media (max-width: 480px) {
        .booking-title {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .booking-subtitle {
            font-size: 14px;
            margin-bottom: 20px;
        }

        .booking-text {
            padding: 30px 20px;
        }

        .booking-button {
            padding: 14px;
        }
    }
    @@media (min-width: 1200px) {
        .booking-text {
            max-width: 800px;
            margin: 0 auto;
        }
    }
</style>